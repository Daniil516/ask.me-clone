<%= form_with model: question do |form| %>
  <p><%= form.label :body, "question text:" %></p>
  <p><%= form.text_area :body, rows: 5, class: "form-text-area" %></p>

  <p class="mt"><%= form.label :user_id, "user_id:" %></p>
  <p class="mb"><%= form.number_field :user_id, class: "form-text-field" %></p>

  <%= form.submit "Save", class: "button button-main" %>
<% end %>
