<h2>Question editing <%=@question.id %>></h2>
<%= form_with model: @question do |form| %>
  <p><%= form.label :body, "Question text:" %></p>
  <p><%= form.text_area :body, rows: 5 %></p>
  <p><%= form.label :user_id, "User:" %></p>
  <p><%= form.number_field :user_id %></p>
  <p><%= form.submit "Done" %></p>
<% end %>
