<div class="container">
  <h2 class="title-lg mb">
    New users:
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: "users/user_avatar", locals: { user: user } %>
    <% end %>
  </div>
</div>


<div class="container mt-sm">
  <h2 class="title-lg"> Last <%= @questions.count %> <%= inclination("question", @questions.count) %>: </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container <%= "hidden_question" if question.hidden %>">
    <div class="question-header">
      <p>Question <%= link_to "##{question.id}", question_path(question) %> asked by
        <% if question.author.nil? %>
          <%= "stranger" %>
        <% else %>
          <%= link_to "@#{question.author.nickname}", user_path(question.author) %>
        <% end %>
      </p>
      <p>to <%= link_to "@#{question.user.nickname}", user_path(question.user) %></p>
    </div>
    <%= render question %><%# равняется render "question", question: @question %>
  </div>
<% end %>
